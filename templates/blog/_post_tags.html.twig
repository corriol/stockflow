{% if not post.tags.empty %}
    <p>
        {% for tag in post.tags %}
            <a href="{{ path('app_blog_index', {'tag': tag.name == app.request.query.get('tag') ? null : tag.name}) }}"
               class="badge bg-{{ tag.name == app.request.query.get('tag') ? 'success' : 'secondary' }}"
            >
                <i class="fa-solid fa-tag"></i> {{ tag.name }}
            </a>
        {% endfor %}
    </p>
{% endif %}

